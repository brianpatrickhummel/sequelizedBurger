
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <ul class="center"> 
    {{#each burgers}}
      {{#unless this.devoured}}
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 well">
            <li>{{this.id}}. {{this.burger_name}}</li>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form action="/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devour" value="1">
              <button class="hvr-bubble-float-right" id="devourButton" type="submit">Devour</button>
            </form>
          </div>
        </div>
      {{/unless}}
    {{/each}}
    </ul>
  </div> 
  
  
